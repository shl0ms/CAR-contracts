{
  "name": "auction-contract",
  "version": "0.1.0",
  "description": "Auction smart contracts",
  "private": true,
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windranger-io/auction-contract"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "deploy-ropsten": "npx hardhat run scripts/deploy.ts --network ropsten",
    "deploy-kovan": "npx hardhat run scripts/deploy.ts --network kovan",
    "deploy-mainnet": "npx hardhat run scripts/deploy.ts --network mainnet",
    "select-ropsten": "npx hardhat run scripts/selectWinners.ts --network ropsten",
    "select-mainnet": "npx hardhat run scripts/selectWinners.ts --network mainnet",
    "format": "npm run format-ts && npm run format-sol",
    "format-ts": "prettier '**/*.ts' --write",
    "format-sol": "prettier '**/*.sol' --write",
    "lint": "npm run lint-ts && npm run lint-sol",
    "lint-ts": "eslint . --ext .ts",
    "lint-sol": "solhint ./contracts/**/*.sol",
    "plant": "npx node-plantuml ./docs/specs",
    "prepare": "husky install",
    "test": "mocha --timeout 10000 --exit --recursive --require ts-node/register 'test/**/*.test.ts'"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "^4.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@openzeppelin/hardhat-upgrades": "^1.14.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/bunyan": "^1.8.7",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.5.0",
    "bunyan": "^1.8.15",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.2",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.2",
    "lint-staged": "^12.1.4",
    "mocha": "^9.1.2",
    "node-plantuml": "windranger-io/node-plantuml#fcfc730",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.5.4",
    "dotenv": "^16.0.0"
  }
}
